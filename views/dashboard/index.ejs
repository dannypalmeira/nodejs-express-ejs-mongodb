<div class="container-fluid container-fluid-custom pb-5 mb-5">

    <div class="row mb-4">
      <div class="col">
        <h1>Hey, <% userName %></h1>
      </div>
      <div class="col text-end">
        <a href="/dashboard/add" class="btn btn-primary">+ Novo</a>
      </div>
    </div>
  
    <div class="row">
      <% if (reserva.length > 0) { for(var i=0; i < reserva.length; i++) { %>
        <div class="col-sm-3 mb-4">
          <div class="card border-primary" style="min-height: 210px">
            <a href="/dashboard/item/<%= reserva[i]._id %>" class="card-body text-decoration-none">
              <h5 class="card-title"><%= reserva[i].title %></h5>
              <p class="card-text"><%= reserva[i].body %></p>
            </a>
          </div>
        </div>
      <%  }} else { %>
        <div class="row">
          <div class="col mt-md-4">
            <h2>Okay...</h2>
            <h4>Você ainda não fez nenhuma reserva.<br/><br/>
              <a href="/dashboard/add">Create one!</a>
            </h4>
          </div>
        </div>
      <% } %>
    </div>
  
    <% if(reserva.length > 0) { %>
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center mt-5">
          <% if(current == 1) { %>
            <li class="page-item"><a class="page-link" href="#">Anterior</a></li>
          <% } else { %>
            <li class="page-item"><a class="page-link" href="/dashboard">Primeira</a></li>
          <% }  %>
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1 ) { %>
            <li class="page-item"><a class="page-link" href="#">...</a></li>
          <% } %>
          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if(i == current ) { %>
              <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
            <% } else { %>
              <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if(i == Number(current) + 4 && i < pages) { %>
              <li class="page-item"><a class="page-link" href="#">...</a></li>
            <% } %>
          <% } %>
          <% if (current == pages) { %>
              <li class="page-item disabled"><a class="page-link">Próxima</a></li>
          <% } else { %>
              <li class="page-item"><a href="/dashboard/?page=<%= pages %>" class="page-link">Última</a></li>
          <% } %>
        </ul>
      </nav>
  
    <% } %>
  
  </div>